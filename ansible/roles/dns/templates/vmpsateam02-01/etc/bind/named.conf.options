acl psa {
    192.168.0.0/16;
    127.0.0.0/8;
};


options {
        directory "/var/cache/bind";

        forwarders {
            131.159.254.1;
            131.159.254.2;
        };

        listen-on {
         {{ bind9.listen_address }};
        };

        listen-on-v6 { none; };

        allow-query { psa; };

        recursion yes;

        dnssec-validation no;
};
